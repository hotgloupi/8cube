#include <wrappers/boost/python.hpp>

#include "camera.hpp"

namespace py = boost::python;
using namespace cube::gl::camera;

BOOST_PYTHON_MODULE(camera)
{
	typedef cube::gl::vector::Vector3f vector_type;

	py::class_<Camera>(
			"Camera",
			py::init<vector_type const&, vector_type const&, vector_type const&>()
		)
		.def_readwrite("position", &Camera::position)
		.def_readwrite("front", &Camera::front)
		.def_readwrite("up", &Camera::up)
		.add_property("right", &Camera::right)
	;
}
