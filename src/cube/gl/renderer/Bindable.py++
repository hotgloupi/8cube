#include "Bindable.hpp"

#include <wrappers/boost/python.hpp>

BOOST_PYTHON_MODULE(Bindable)
{
	namespace py = boost::python;
	using namespace ::cube::gl::renderer;

	py::class_<Bindable, boost::noncopyable, std::auto_ptr<Bindable>>(
			"Bindable",
			py::no_init
		)
		.add_property("bound", &Bindable::bound)
	;
	py::register_unique_ptr_converter<Bindable>();
}

