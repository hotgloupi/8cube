#include "RenderTarget.hpp"
#include "Texture.hpp"

#include <cube/python.hpp>

BOOST_PYTHON_MODULE(RenderTarget)
{
	namespace py = boost::python;
	using namespace cube::gl::renderer;

	py::class_<
		  RenderTarget
		, boost::noncopyable
		, RenderTargetPtr
		, py::bases<Bindable, cube::resource::Resource>
	>("RenderTarget", py::no_init)
		.add_property("texture", &RenderTarget::texture)
		.def("save", &RenderTarget::save)
	;
	py::register_unique_ptr_converter<Texture>();
}
